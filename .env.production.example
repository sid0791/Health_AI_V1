# ⚠️ PRODUCTION ENVIRONMENT TEMPLATE
# Copy this file to .env.production and replace all values with real production secrets
# NEVER commit actual production secrets to version control

# Core Application Settings
NODE_ENV=production
PORT=8080
API_BASE_URL=https://api.yourdomain.com
APP_ORIGIN=https://yourdomain.com

# Database Configuration (Production)
DB_HOST=your-production-db-host
DB_PORT=5432
DB_USERNAME=healthcoachai_prod
DB_PASSWORD=REPLACE_WITH_STRONG_PASSWORD
DB_NAME=healthcoachai_production
DB_SSL=true
DB_MAX_CONNECTIONS=50
POSTGRES_URL=postgresql://healthcoachai_prod:PASSWORD@your-production-db-host:5432/healthcoachai_production
POSTGRES_SSL=true
POSTGRES_MAX_CONNECTIONS=25

# Redis Configuration (Production)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_REDIS_PASSWORD
REDIS_URL=redis://:REDIS_PASSWORD@your-redis-host:6379
REDIS_TTL_DEFAULT=3600
CACHE_TTL=300
CACHE_MAX_ITEMS=5000

# Object Storage (S3 Production)
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=healthcoachai-production
S3_ACCESS_KEY=REPLACE_WITH_AWS_ACCESS_KEY
S3_SECRET_KEY=REPLACE_WITH_AWS_SECRET_KEY
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=false

# Authentication & JWT (Production)
JWT_SECRET=REPLACE_WITH_CRYPTOGRAPHICALLY_SECURE_JWT_SECRET_256_BITS
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=1209600
JWT_ISSUER=healthcoachai-production

# OAuth Providers (Production Keys)
GOOGLE_CLIENT_ID=REPLACE_WITH_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=REPLACE_WITH_GOOGLE_CLIENT_SECRET
APPLE_CLIENT_ID=REPLACE_WITH_APPLE_CLIENT_ID
APPLE_TEAM_ID=REPLACE_WITH_APPLE_TEAM_ID
APPLE_KEY_ID=REPLACE_WITH_APPLE_KEY_ID
APPLE_PRIVATE_KEY_B64=REPLACE_WITH_BASE64_ENCODED_APPLE_PRIVATE_KEY
FACEBOOK_APP_ID=REPLACE_WITH_FACEBOOK_APP_ID
FACEBOOK_APP_SECRET=REPLACE_WITH_FACEBOOK_APP_SECRET

# AI Providers (Production Keys)
OPENAI_API_KEY=REPLACE_WITH_OPENAI_API_KEY
OPENAI_ORGANIZATION=REPLACE_WITH_OPENAI_ORG_ID
ANTHROPIC_API_KEY=REPLACE_WITH_ANTHROPIC_API_KEY
GOOGLE_VERTEX_PROJECT=REPLACE_WITH_GCP_PROJECT_ID
GOOGLE_VERTEX_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS_B64=REPLACE_WITH_BASE64_SERVICE_ACCOUNT_JSON

# OCR Provider Configuration (Production)
GOOGLE_DOCUMENTAI_PROJECT=REPLACE_WITH_GCP_PROJECT_ID
GOOGLE_DOCUMENTAI_LOCATION=us
GOOGLE_DOCUMENTAI_PROCESSOR_ID=REPLACE_WITH_PROCESSOR_ID
AWS_TEXTRACT_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY
AWS_TEXTRACT_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_KEY
AWS_TEXTRACT_REGION=us-east-1

# External Integrations (Production)
FITBIT_CLIENT_ID=REPLACE_WITH_FITBIT_CLIENT_ID
FITBIT_CLIENT_SECRET=REPLACE_WITH_FITBIT_CLIENT_SECRET
OPENWEATHER_API_KEY=REPLACE_WITH_OPENWEATHER_API_KEY
IQAIR_API_KEY=REPLACE_WITH_IQAIR_API_KEY

# Push Notifications (Production)
APNS_KEY_ID=REPLACE_WITH_APNS_KEY_ID
APNS_TEAM_ID=REPLACE_WITH_APNS_TEAM_ID
APNS_PRIVATE_KEY_B64=REPLACE_WITH_BASE64_APNS_PRIVATE_KEY
APNS_BUNDLE_ID=com.healthcoachai.app
APNS_ENVIRONMENT=production
FCM_PROJECT_ID=REPLACE_WITH_FCM_PROJECT_ID
FCM_CLIENT_EMAIL=REPLACE_WITH_SERVICE_ACCOUNT_EMAIL
FCM_PRIVATE_KEY_B64=REPLACE_WITH_BASE64_FCM_PRIVATE_KEY

# Observability & Monitoring (Production)
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otel-endpoint
OTEL_SERVICE_NAME=healthcoachai-backend
OTEL_SERVICE_VERSION=1.0.0
SENTRY_DSN=REPLACE_WITH_SENTRY_DSN
SENTRY_ENVIRONMENT=production

# Security Configuration (Production)
BCRYPT_ROUNDS=14
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
HELMET_ENABLED=true
THROTTLE_TTL=60
THROTTLE_LIMIT=60
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_AUTH_MAX_REQUESTS=500

# Feature Flags (Production)
FEATURE_CHAT_ENABLED=true
FEATURE_PHOTO_LOG_ENABLED=true
FEATURE_VOICE_INPUT_ENABLED=true
FEATURE_PREMIUM_FEATURES_ENABLED=true

# External API Keys (Production)
USDA_API_KEY=REPLACE_WITH_USDA_API_KEY

# Production Optimizations
LOG_LEVEL=warn
DEBUG_SQL=false
ENABLE_PLAYGROUND=false
HTTP_TIMEOUT=30000

# Vector Store Configuration
PGVECTOR_ENABLED=true
PGVECTOR_DIMENSIONS=1536

# AI Policy Configuration
AI_POLICY_LEVEL1_DAILY_TIERS=500,1000,2000
AI_POLICY_LEVEL2_ACCURACY_WINDOW=0.03
AI_VENDOR_LIST=openai,anthropic,vertex
AI_ZERO_RETENTION=true