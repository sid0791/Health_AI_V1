#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit hooks..."

# Run lint-staged for staged files but continue on errors
echo "📝 Running lint-staged..."
npx lint-staged || {
  echo "⚠️  Lint-staged found issues but continuing..."
}

# Check for secrets in staged files
echo "🔐 Scanning for secrets..."
if command -v gitleaks &> /dev/null; then
  gitleaks protect --staged --verbose || {
    echo "⚠️  Gitleaks found issues but continuing..."
  }
else
  echo "⚠️  Warning: gitleaks not found. Skipping secret scan."
  echo "💡 Install gitleaks: https://github.com/zricethezav/gitleaks#installation"
fi

# Note: Commit message validation happens in commit-msg hook, not pre-commit
echo "📝 Pre-commit checks ready for commit message validation..."

echo "✅ Pre-commit checks completed!"